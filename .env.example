# Server Configuration
PORT=3000

# Cache TTL in milliseconds (default: 5 minutes)
CACHE_TTL_MS=300000

# Maximum pages to fetch in multi-page mode
MAX_PAGES=10

# Auth token for API downloads (get from browser after login)
AUTH_TOKEN=your_jwt_token_here
# Alternative name accepted by the server
# ACCESS_TOKEN=your_jwt_token_here

# Optional device identifier if upstream asks for DeviceID challenge
# DEVICE_ID=your_device_id_here

# Referrer URL for hotlink protection (default: https://not.ultranx.ru)
REFERRER=https://not.ultranx.ru

# Optional TTL for cached resolved download redirects (0 disables cache)
DOWNLOAD_REDIRECT_CACHE_TTL_MS=0

# Proxy mirror bytes through this server (set true only if direct redirects fail in Tinfoil)
DOWNLOAD_PROXY=false

# Enable request logging (true/false)
LOG_REQUESTS=true

# Batch size for parallel game detail fetches
BATCH_SIZE=5

# Fetch timeout in milliseconds (default: 15 seconds)
FETCH_TIMEOUT_MS=15000

# Tinfoil custom index version field
TINFOIL_MIN_VERSION=17
